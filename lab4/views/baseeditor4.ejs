        </div> 
    </form>
    <% if(data) { %>
    <div id="output" class="text-center"><%- data %></div>
    <% } else {} %>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>